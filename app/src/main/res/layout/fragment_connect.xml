<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cyberdynesystems.nxt.MainActivity">

    <TextView
        android:id="@+id/vv_frag_connect_tv_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="NXT Device Bluetooth Connection"
        android:layout_alignParentTop="true"
        android:textSize="18dp"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        android:layout_marginRight="20dp"

        android:src="@drawable/bluetooth_grey"
        android:id="@+id/vv_frag_connect_iv_blueToothIcon"
        android:layout_below="@+id/vv_frag_connect_tv_intro"
        android:layout_toStartOf="@+id/vv_frag_connect_tv_device_name"
        android:layout_marginTop="73dp"
        android:contentDescription="blueToothIcon"
        android:layout_toLeftOf="@+id/vv_frag_connect_tv_device_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lego Device"
        android:textSize="28dp"
        android:id="@+id/vv_frag_connect_tv_device_name"
        android:layout_alignTop="@+id/vv_frag_connect_iv_blueToothIcon"
        android:layout_toLeftOf="@+id/vv_frag_connect_btn_close"
        android:layout_toStartOf="@+id/vv_frag_connect_btn_close" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Connected"
        android:textSize="20dp"
        android:id="@+id/vv_frag_connect_tv_status"
        android:layout_below="@+id/vv_frag_connect_iv_blueToothIcon"
        android:layout_alignLeft="@+id/vv_frag_connect_tv_device_name"
        android:layout_alignStart="@+id/vv_frag_connect_tv_device_name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/vv_frag_connect_btn_connect"
        android:layout_below="@+id/vv_frag_connect_tv_status"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/vv_frag_connect_btn_close"
        android:layout_alignTop="@+id/vv_frag_connect_btn_connect"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery Level"
        android:textSize="20dp"
        android:id="@+id/vv_frag_connect_tv_battery_label"
        android:layout_below="@+id/vv_frag_connect_btn_connect"
        android:layout_alignLeft="@+id/vv_frag_connect_btn_connect"
        android:layout_marginTop="49dp"
        android:layout_margin="10dp"

        />

    <SeekBar
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/vv_frag_connect_slider"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/vv_frag_connect_tv_battery_label" />

</RelativeLayout>
